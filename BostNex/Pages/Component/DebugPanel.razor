@using BostNex.Services
@using OpenAI.Chat
@inject ITrpgFormatService _format;
@inject IOpenAiService _openAi

@* 今までのチャットログを表示する *@
<p>★debug mode★</p>
<table class="table table-primary table-striped table-bordered">
    <thead>
        <tr>
            <th>Role</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in ChatLog)
        {
            var content = (MarkupString)log.Content.Replace("\r\n", "<br />").Replace("\n", "<br />");
            <tr>
                <td>@log.Role</td>
                <td>@content</td>
            </tr>
        }
    </tbody>
</table>


@code {
    [Parameter]
    [EditorRequired]
    public List<ChatPrompt> ChatLog { get; set; } = new();
}
